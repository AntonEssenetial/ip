.header-search
  
  &__form 
   
    .form__input
      font-size 30px
      height 100px
      line-height 97px
      padding 0 35px
      box-shadow 0 10px 20px rgba(0, 0, 0, .35)
      +placeholder()
        color black
    
  &__icon 
    cursor pointer
    
.input__submit
  height 100px
  background: image-url('submit.png') no-repeat center $soft
  padding 0 100px
  cursor pointer 
  &:hover 
    background-color: $brown
    trs()
    
