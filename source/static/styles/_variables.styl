// Bordered
bordered( $color = yellow, $size = 14px, $color2 = white)
  if $size
    font-size $size
  if $color2
    color $color2
  bold()
  position: relative
  text-transform: uppercase
  +after('')
    width 20px 
    absolute-center(20px, -15px)
    height 2px 
    if $color
      background: $color
    display block
    margin 2px 0 0 0
    trs()
  &:hover 
    color $brown
    trs()
    &:after 
      width 100% 
      background: $brown
      trs()
      

bordered-center( $color = yellow, $size = 14px, $color2 = white)
  if $size
    font-size $size
  if $color2
    color $color2
  bold()
  position relative
  text-transform uppercase
  +before('')
    position absolute
    width 100%
    height 2px
    bottom -2px
    left 0
    background-color #000
    visibility hidden
    -webkit-transform scaleX(0)
    transform scaleX(0)
    -webkit-transition all 0.3s ease-in-out 0s
    transition all 0.3s ease-in-out 0s
    if $color
      background $color
    display block
    margin 2px 0 0 0
    trs()
  &:hover 
    color $brown
    trs()
    +before()
      visibility: visible
      -webkit-transform scaleX(1)
      transform scaleX(1)
      background $brown
      trs()


