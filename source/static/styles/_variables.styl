      width 19px
      height @width
      background: white
      border-radius (50%)
      display inline-block
      position relative
      cursor pointer
      border 1px solid white
      +after('')
        trs()
        width 5px 
        height @width
        background: black
        display: block
        margin 6px
        border-radius (50%)
        display: none
    // Checkbox
    .label__checkbox i 
      width 19px 
      height @width
      display inline-block
      position relative
      border-radius (2px)
      background: white
      cursor pointer
      border 1px solid white
      +after('')
        width 8px 
        height 5px 
        border-radius (0%)
        display block
        border-bottom: 3px solid #f5aa00;
        border-left: 3px solid #f5aa00;
        transform: rotateZ(-45deg);
        trs()
        margin-left 0px
        left 3px 
        top 3px
        position: relative
        display none
    // Custom checkbox
    .label__checkbox .input__checkbox:checked + i
      border-color $blue
      +after()
        display: block
        trs()
     // Custom radio   
    .label__radio .input__radio:checked + i
      background: $yellow
      border-color black
      +after()
