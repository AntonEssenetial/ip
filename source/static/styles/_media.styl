  .single__more
    background: white
    padding 20px
  .single-wrapper
    padding-bottom 20px
    background: #f7f7f7
  .single__article__img
    margin-bottom 20px
  .header__bottom__search
  .footer__top__left
  .slick-dots
  .single__article__right
    display: none
  .footer__bottom__right
  .single__article__left
  .contacts__form__left
  .contacts__form__right
  .contacts__town
    width 100%
  .footer__bottom__left
    width 100%
    > .row 
      flex-wrap wrap
  .header__top
    height 150px
  .main__item__category
  .main__item__icon
    margin-bottom 20px
  .category__slider
    padding 30px 0
  .category__slider__title
    font-size 20px
  .category__item
    width 50%
  .single__article__left__tags
    flex-wrap wrap
  .single__article__link
    margin-bottom 10px
  .single__article__top
    flex-direction column
  .single__article__top__link
  .contacts__town
    margin-bottom 10px
  .contacts__form__row 
