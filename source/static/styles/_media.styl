// Media queries, example +width-range(10em, 20em)
+width-max(1920px)
  .registration-popup_title
    font-size 30px
  .registration-popup
    &-wrapper 
      absolute-center(400px, 650)
  .form__input_popup,
  .button_popup
    height 50px
    font-size 18px
  .icon-1
    background: image-url('icon4.png') no-repeat left center white
  .icon-2
    background: image-url('icon5.png') no-repeat left center white
  

+width-max($container-width)
  .registration-popup
    &-wrapper 
      absolute-center(50%, 650)
  .container 
  .slick-dots
    width 100%
  .main__top__row 
    flex-direction column
  .main__top__right
  .main__top__left
    width 100%
  .main__top 
    padding 0px 0 20px 0
  .main__item__content
    padding 20px 0 0 0
  .main__top__right
  .main__dots 
  .main__top__category-title
  .main__blocks
  .footer__up
    display: none
  .main__item__left
  .main__item__right
    width 50%
  .main__item__right > .row 
    flex-wrap wrap
  .main-menu
    trs()
    display: none
    position: absolute
    left 0px
    background: white
    top 130px
    width 100%
    margin 0px
    z-index: 10
    box-shadow 0 10px 10px rgba(0, 0, 0, .15)
    padding 10px 0
  .main-menu.active
    display: block
  .toggle-menu
    display: block
    margin 0
    top -6px
    left 10px
  .main-menu ul
    flex-direction column
  .main-menu__item 
    margin 10px 20px
  

