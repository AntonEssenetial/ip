// iPad 
+width-max(900px)
  .main__item__single
    flex-direction column
  .main__item__left 
  .main__item__right
    width 100%
  .main__item__left 
    margin-bottom 30px
  .main__item__title
    margin 20px 0
  .main__item__img
    width 100%
  .footer__bottom
    > .container
      > .row 
        flex-direction column
  .footer__bottom__left
    margin 0 0 20px 0
  .footer__bottom__right
    text-align left
  .footer__bottom__soc
    justify-content flex-start
    margin-bottom 20px
  .vk 
    margin-left 0px !important
  .main-menu__sub-menu
    padding 70px 10px
  .main-menu__sub-menu__link
    font-size 18px


// iPad mini
+width-max(768px)
  .registration-popup
    &-wrapper 
      absolute-center(95%, 530)
  .gallery__item 
    width 50%
  .single__article__title
    width 100%
    font-size 24px
    margin-bottom 20px
    text-align left
  .main__item__category-titl
    font-size 30px
    margin-bottom 20px 
    +before()
      display: none
  .single__more__title
    color black
    margin-bottom 20px
